{
  "manifest_version": 3,
  "name": "AJAX to Clipboard",
  "version": "1.0",
  "description": "Sends an AJAX request and copies the result to the clipboard.",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "plish"
  },
  "permissions": [
    "clipboardWrite",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
